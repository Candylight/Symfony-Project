{% extends 'dashboard/dashboardBody.html.twig' %}

{% block dashboardContent %}
    <h1>{{ "event.list.title"|trans }}</h1>
    {% for event in events %}

    {% else %}
        <div>
            <p>{{ "event.list.noEvent"|trans }}</p>
            <a class="button" href="{{ path('new_event') }}">{{ "dashboard.buttons.createEvent"|trans }}</a>
        </div>
    {% endfor %}
{% endblock %}
